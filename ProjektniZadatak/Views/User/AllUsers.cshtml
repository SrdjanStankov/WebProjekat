@model IEnumerable<ProjektniZadatak.Models.User>

@{
    ViewBag.Title = "AllUsers";
}

<p>
    <a href="~/User/AdminCreateHost">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            Username
        </th>
        <th>
            Password
        </th>
        <th>
            Name
        </th>
        <th>
            Last name
        </th>
        <th>
            Gender
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Username
        </td>
        <td>
            @item.Password
        </td>
        <td>
            @item.Name
        </td>
        <td>
            @item.Lastname
        </td>
        <td>
            @item.GenderString
        </td>
        <td>
            <a href="~/User/EditUser/id=@item.Username">Edit</a> |
            <a href="~/User/DeleteUser/id=@item.Username">Delete</a>
        </td>
    </tr>
}

</table>
