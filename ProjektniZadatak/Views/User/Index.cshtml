@model ProjektniZadatak.Models.User

@{
    ViewBag.Title = "Index";
}


<form action="~/User/Register" method="post">

    <div class="form-group">
        <label class="col-md-2">Username</label>
        <input class="form-control" type="text" name="Username" />
        <span class="text-danger">@TempData["Username"]</span>
    </div>

    <div class="form-group">
        <label class="col-md-2">Password</label>
        <input class="form-control" type="password" name="Password" />
        <span class="text-danger">@TempData["Password"]</span>
    </div>

    <div class="form-group">
        <label class="col-md-2">Name</label>
        <input class="form-control" type="text" name="Name" />
        <span class="text-danger">@TempData["Name"]</span>
    </div>

    <div class="form-group">
        <label class="col-md-2">Last name</label>
        <input class="form-control" type="text" name="LastName" />
        <span class="text-danger">@TempData["Lastname"]</span>
    </div>

    <div class="form-group">
        <label class="col-md-2">Gender</label>
        <div class="form-group">
            <select class="custom-select" name="Gender">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>
    </div>

    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Create" class="btm btn-success" />
    </div>

</form>
<a href="~/User">Reload</a>
<a href="~/User/Login">Login</a>

