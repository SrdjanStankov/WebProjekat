@model IEnumerable<ProjektniZadatak.Models.Comment>

@{
    ViewBag.Title = "ViewComments";
}

@{
    if (Session["User"] is null || Model is null)
    {
        Response.Redirect("~/User/Index");
        return;
    }
}

<h2>Comments</h2>

<table class="table">
    <tr>
        <th>
            Text
        </th>
        <th>
            Rating
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Text
            </td>
            <td>
                @item.Rating
            </td>
        </tr>
    }

</table>
